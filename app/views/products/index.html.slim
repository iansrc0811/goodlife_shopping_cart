  $("button[id*='add-to-cart-btn']").on('click', function() {
    let productId = $(this).data('product')
    let selectId = '#add-to-cart-counter-' + productId
    let productPcs = $(selectId).val()
    $.ajax({
      type: "POST",
      url: '/products/' + productId +  '/add_to_cart',
      data: {
        pcs: productPcs
      },
      success: function(response, status) {
        console.log(response)
      }
    })
  })
